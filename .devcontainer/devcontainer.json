{
  "name": "Cloud Run Local Dev (Python 3.12, DooD)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "remoteUser": "vscode",

  // コンテナ実行時オプション（compose の volumes/env/--init 相当）
  "init": true,
  "mounts": [
    // DooD: ホストの Docker デーモンを使用
    "type=bind,source=/var/run/docker.sock,target=/var/run/docker.sock",
    // gcloud の設定を named volume に永続化（volume 名は固定で作られる）
    "type=volume,source=gcloud-config,target=/home/vscode/.config/gcloud"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "GoogleCloudTools.cloudcode",
        "ms-python.python",
        "charliermarsh.ruff",
        "sqlfluff.sqlfluff",
        "HashiCorp.terraform"
      ]
    }
  },

  "postCreateCommand": "pip install -r requirements-dev.txt",
  "postStartCommand": "bash .devcontainer/post-start.sh"
}
